{
  "$schema": "https://turbo.build/schema.json",
  "globalDependencies": ["tsconfig.json"],
  "tasks": {
    "build": {
      "inputs": ["$TURBO_DEFAULT$", "!./dld/**"],
      "outputs": ["./dist/**", "./pkg-*.tgz", "./pkg-*.zip"],
      "dependsOn": ["^build"],
      "passThroughEnv": ["PL_DOCKER_REGISTRY_PUSH_TO"]
    },
    "test": {
      "dependsOn": ["build"],
      "passThroughEnv": ["PL_DOCKER_REGISTRY_PUSH_TO"]
    }
  }
}
