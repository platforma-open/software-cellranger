{
  "$schema": "https://turbo.build/schema.json",
  "globalDependencies": ["tsconfig.json"],
  "tasks": {
    "build": {
      "inputs": ["$TURBO_DEFAULT$", "!./dld/**", "!./pkg-*.tgz"],
      "outputs": ["./dist/**"],
      "dependsOn": ["^build"]
    },
    "test": {
      "dependsOn": ["build"]
    }
  }
}
